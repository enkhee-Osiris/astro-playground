{
  "name": "your-project-name",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "generate": "astro sync",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.mjs,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.mjs,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,mjs}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.astro": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{md,mdx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.1",
    "astro": "^5.13.5",
    "lodash": "^4.17.21",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@eslint/js": "^9.34.0",
    "@types/lodash": "^4.17.20",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
