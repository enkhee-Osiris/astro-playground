---
import BaseHead from "@/components/BaseHead.astro";
import { getCategoriesWithBlogs } from "@/utils/data";

export async function getStaticPaths() {
  const categories = await getCategoriesWithBlogs();

  return categories.map(({ category, blogs }) => ({
    params: { slug: category.data.slug },
    props: { category: category.data, blogs },
  }));
}

const { category, blogs } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title="asd" description="aaa" />
  </head>

  <body>
    <main>
      <div>{category.slug}</div>
      <div>{category.name}</div>
      <div>{blogs.length}</div>
    </main>
  </body>
</html>
